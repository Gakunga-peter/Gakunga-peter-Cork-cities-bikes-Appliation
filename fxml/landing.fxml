<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.corkcitiesbikes.controllers.LandingController">

    <!-- Header Section -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2d572c;">
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@/media/images/logo.png" />
                </image>
            </ImageView>
            <Label text="Cork City Bikes" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Sign In" onAction="#navigateToLogin" style="-fx-background-color: white;" />
            <Button text="Sign Up" onAction="#navigateToSignup" style="-fx-background-color: white;" />
        </HBox>
    </top>

    <!-- Main Body Section -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Welcome to Cork City Bikes" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label text="Explore the city conveniently with our shared bike system."
                   style="-fx-font-size: 16px; -fx-text-fill: #555;" />
            <ImageView fitWidth="300" fitHeight="200">
                <image>
                    <Image url="@/media/images/bike_image.png" />
                </image>
            </ImageView>
            <Label text="Cork City Bikes is your go-to solution for eco-friendly, affordable, and efficient bike rentals in Cork City. "
                   style="-fx-font-size: 14px; -fx-text-fill: #444;" wrapText="true" />
            <Label text="With stations located across the city, we make it easier for residents and tourists to explore Cork while promoting sustainability."
                   style="-fx-font-size: 14px; -fx-text-fill: #444;" wrapText="true" />
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #2d572c;">
            <Label text="Contact us: info@corkcitybikes.ie | Phone: +353 123 456 789"
                   style="-fx-text-fill: white;" />
        </HBox>
    </bottom>
</BorderPane>
